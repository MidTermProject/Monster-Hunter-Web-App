@model IEnumerable<MonsterWebApp.Models.WeaponsResult>

<form>
    <select name="weaponClass">
        <option> Filter By Weapon Class</option>
        <option value="Great Sword">Great Sword</option>
        <option value="Long Sword">Long Sword</option>
        <option value="Sword & Shield">Sword & Shield</option>
        <option value="Dual Blades">Dual Blades</option>
        <option value="Hammer">Hammer</option>
        <option value="Hunting Horn">Hunting Horn</option>
        <option value="Lance">Lance</option>
        <option value="Great Gunlance">Great Gunlance</option>
        <option value="Switch Axe">Great Sword</option>
        <option value="Charge Blade">Charge Blade</option>
        <option value="Insect Glaive">Insect Glaive</option>
        <option value="Light Bowgun">Light Bowgun</option>
        <option value="Heavy Bowgun">Heavy Bowgun</option>
        <option value="Bow">Bow</option>
    </select>

    <select name="element">
        <option value = null> Filter By Element</option>
        <option value="Fire">Fire</option>
        <option value="Electric">Electric</option>
        <option value="Earth">Earth</option>
    </select>

    <select name="rarity">
        <option value= 0> Filter By Rarity</option>
        <option value= 1>1</option>
        <option value= 2>2</option>
        <option value= 3>3</option>
        <option value= 4>4</option>
    </select>

    <button type="submit" asp-action="FilterBlade" asp-controller="Home"></button>
</form>


@foreach (var i in Model)
{
<tr>
    <td> <img src="@i.ImgUrl" height="8%" width="5%" /></td>
    <td>Name: @i.Name</td>
    <br />
    <td>Weapon Class: @i.WeaponClass</td>
    <br />

    <td><a asp-action="GetBladeByID" asp-controller="Home" asp-route-id="@i.Id">View</a></td>
    <hr />
</tr>

}