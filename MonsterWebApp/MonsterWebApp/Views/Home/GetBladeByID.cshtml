@model IEnumerable<MonsterWebApp.Models.WeaponsResult>

@{
    Layout = "_Layout";
}



@foreach (var i in Model)
{
    <div class="card mb-3">
        <h3 class="card-header">@i.Name</h3>
        <div class="card-body">
            <h5 class="card-title">Weapon Class: @i.WeaponClass</h5>
        </div>
        <img src="@i.ImgUrl" alt="Card image">
        <div class="card-body">
            <p class="card-text">@i.Description</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Element Type: @i.ElementType</li>
            <li class="list-group-item">Sharpness: @i.Sharpness</li>
            <li class="list-group-item">Affinity: @i.Affinity</li>
        </ul>
        <div class="card-body">
            <p>Materials</p>
            <a href="#" class="card-link">@i.Materials</a>
            @*<a href="#" class="card-link">@i.Materials</a>*@
        </div>
    </div>
}
