@model IEnumerable<MonsterWebApp.Models.WeaponsResult>

@{
    Layout = "_Layout";
}


<div class="jumbotron">
    <h1 class="display-3">Weapon Selection</h1>
    <p class="lead">Pick the Weapon you would divke to create!</p>
</div>
<div class="progress">
    <div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
</div>

<div class="container">
    <div class="weapons-div">
    <div id="greatSword">
        <a asp-action="FilterBlade" asp-controller="Home" asp-route-weaponClass="Great Sword">
            <img src="~/Img/greatsword.png" alt="Great Sword" style="margin-top: 20%"/>
            <p>Great Sword</p>
        </a>
    </div>
    <div id="longSword">
        <a asp-action="FilterBlade" asp-controller="Home" asp-route-weaponClass="Long Sword">
            <img src="~/Img/longsword.png" alt="Alternate Text" />
            <p>Long Sword</p>
        </a>
    </div>
    <div>
        <a href="#">
            <img src="~/Img/dualblade.png">
            <p>Sword & Shield</p>
        </a>
    </div>
</div>

<div class="weapons-div">
    <div>
        <a href="#">
            <img src="~/Img/hammer.png">
            <p>Hammer</p>
        </a>
    </div>
    <div>
        <a href="#">
            <img src="~/Img/huntinghorn.png">
            <p>Hunting Horn</p>
        </a>
    </div>
    <div>
        <a href="#">
            <img src="~/Img/lance.png">
            <p>Lance</p>
        </a>
    </div>
</div>

<div class="weapons-div">
    <div>
        <a href="#">
            <img src="~/Img/gunlance.png">
            <p>Gun Lance</p>
        </a>
    </div>
    <div>
        <a href="#">
            <img src="~/Img/switchaxe.png" style="margin-top: 10%">
            <p>Switch Axe</p>
        </a>
    </div>
    <div>
        <a href="#">
            <img src="~/Img/chargeblade.png">
            <p>Charge Blade</p>
        </a>
    </div>
</div>
</div>