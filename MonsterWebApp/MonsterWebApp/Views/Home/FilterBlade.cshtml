@foreach (var i in Model)
{
    <div class="card border-success mb-3" style="max-width: 20rem;">
        <div class="card-header">
            <img src="@i.ImgUrl" height="15%" width="15%" />
            <a asp-action="GetBladeByID" asp-controller="Home" asp-route-id="@i.Id">@i.Name</a>
            <td><a asp-action="AddWeapoonToUser" asp-controller="UserModel" asp-route-weaponName="@i.Name"><img src="~/Img/favorite-icon.png" height="15%" width="15%"></a></td>
        </div>
        <div class="card-body text-success">

            <p class="card-text"><b>Class: </b>@i.WeaponClass</p>
            <p class="card-text"><b>Description: </b>@i.Description</p>
            @if (i.ElementType != null)
            {
            <p class="card-text"><b>Element Type: </b>@i.ElementType</p>
            } 
            <p class="card-text"><b>Element Damage: </b>@i.ElementDamage points</p>
            <p class="card-text"><b>Sharpness: </b>@i.Sharpness</p>
        </div>
    </div>

}